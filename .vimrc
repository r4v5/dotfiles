set nocompatible
filetype off

set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

filetype plugin indent on


Bundle 'tpope/vim-rails.git'
Bundle 'stephpy/vim-yaml'
Bundle 'vim-ruby/vim-ruby'
syntax on
set ignorecase
set smartcase
set incsearch
set expandtab
set shiftwidth=2
set tabstop=2
set number
set numberwidth=2
set autoindent
